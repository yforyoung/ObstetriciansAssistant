<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="基本设置">
        <ListPreference
                android:title="字体大小"
                android:defaultValue="小"
                android:summary="小"
                android:entries="@array/font_size"
                android:entryValues="@array/font_size"
                android:key="prf_font_size"/>
        <SwitchPreference
                android:key="prf_video_play_auto"
                android:defaultValue="true"
                android:title="视频自动播放"/>

        <SwitchPreference
                android:defaultValue="true"
                android:title="自动检测更新"
                android:key="prf_check_auto_update"/>
        <Preference
                android:summary="当前版本 V1.0"
                android:key="check_update"
                android:title="检查更新"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="消息设置">
        <SwitchPreference android:title="震动及响铃"
                          android:key="prf_notify_ring"
                          android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="用户设置">
        <Preference
                android:key="change_pwd"
                android:title="修改密码"/>
    </PreferenceCategory>
</PreferenceScreen>