<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.RegisterActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">


        <LinearLayout
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:elevation="10dp"
                android:padding="8dp"
                android:background="#fff"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/register_head_pic"
                    android:src="@mipmap/temp"
                    android:layout_gravity="center"
                    android:layout_width="64dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="64dp"/>

            <TextView
                    android:text="医院"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Spinner
                    android:id="@+id/register_hospital_spinner"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
            </Spinner>
            <TextView
                    android:text="科室"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Spinner
                    android:id="@+id/register_clazz_spinner"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </Spinner>
            <TextView
                    android:text="职位"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Spinner
                    android:id="@+id/register_position_spinner"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
            </Spinner>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_name_layout"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/register_name"
                        android:hint="账号"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/register_pwd"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_pwd_confirm_layout"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/register_pwd_confirm"
                        android:hint="再次确认密码"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:id="@+id/register_bt"
                    android:text="注     册"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/layout_progress_bar"/>

</RelativeLayout>