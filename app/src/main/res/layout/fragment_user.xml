<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#86E0F7FA"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_margin="16dp"
                  android:background="@drawable/shape_essay_bt_bg"
                  android:backgroundTint="#e2e2e2"
                  android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/head_pic_img"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp"/>

        <LinearLayout
                android:id="@+id/user_layout"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/user_name"
                        android:text="阿雅"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/user_position"
                        android:text="妇产科医生"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/user_hospital"
                    android:text="XX医院"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/user_edit_bt"
                    android:layout_marginTop="4dp"
                    android:textColor="#42A5F5"
                    android:visibility="gone"
                    android:text="点击编辑个人信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    <TableLayout
            android:stretchColumns="*"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                    android:id="@+id/case_bt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_case"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="病例"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/qa_bt"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_qa"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="我的提问"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/collection_bt"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_collection"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:text="收藏"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </TableRow>
        <TableRow android:layout_marginTop="16dp">
            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/baby_weight_calculator"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_baby_weight"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:layout_marginTop="4dp"
                        android:text="胎重"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/expected_date_calculator"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_expected_date"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:layout_marginTop="4dp"
                        android:text="预产期"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/healthy_weight_calculator"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_healthy"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:layout_marginTop="4dp"
                        android:text="健康体重"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow
                android:layout_marginTop="16dp"
        >


            <LinearLayout
                    android:id="@+id/setting_bt"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_setting"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView

                        android:text="设置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/logout_bt"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageView
                        android:background="@mipmap/ic_exit"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView

                        android:text="退出登陆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="通知列表"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/notify_list_view"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>