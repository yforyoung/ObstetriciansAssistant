<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/case_name"
                android:text="十个中文字的名字超长"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxEms="8"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:background="@drawable/ic_delete"
                android:id="@+id/case_delete"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/case_edit"
                android:background="@drawable/ic_edit"
                android:layout_toStartOf="@id/case_delete"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:background="#bebebe"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <TextView
            android:id="@+id/case_reason"
            android:padding="8dp"
            android:text="病因：test test content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/case_treatment"
            android:text="治疗方案：test test content "
            android:maxLines="3"
            android:ellipsize="end"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/case_create_date"
            android:text="最近更新：2019-4-1"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <View
            android:background="#e2e2e2"
            android:layout_width="match_parent" android:layout_height="16dp"
          />
</LinearLayout>