<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragments.EssayDetailFragment">
    <ScrollView
            android:id="@+id/essay_detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/essay_detail_title"
                    android:text="title"
                    android:gravity="center|start"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/essay_detail_author"
                    android:text="作者：佚名"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/essay_detail_content"
                    android:layout_margin="8dp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="8dp"
                    android:text="@string/testString"
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="8dp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_margin="8dp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <FrameLayout
                android:background="@drawable/shape_essay_bt_bg"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/essay_detail_star"
                    android:background="@drawable/selector_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>

        <FrameLayout
                android:background="@drawable/shape_essay_bt_bg"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/back_to_top"
                    android:background="@drawable/ic_vertical_align_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>