<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.QADetailFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_question"
                    android:layout_marginEnd="8dp"
            />
            <TextView
                    android:id="@+id/qa_detail_title"
                    android:layout_width="wrap_content"
                    android:text="qa deteil title"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/qa_detail_questioner"
                android:text="提问者：yforyoung"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="qa conetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetentconetent"
                android:id="@+id/qa_detail_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:elevation="3dp"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ADADAD"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:background="#e2e2e2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Spinner
                    android:id="@+id/qa_detail_answer_sort"
                    android:entries="@array/answerSortType"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/qa_detail_answer_count"
                    android:text="19个回答"
                    android:layout_alignTop="@id/qa_detail_answer_sort"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <com.yyl.obstetriciansassistant.myview.NestedExpandableListView
                android:id="@+id/qa_answer_list_view"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:listSelector="@android:color/transparent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>